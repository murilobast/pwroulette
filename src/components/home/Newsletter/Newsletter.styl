.newsletter
	text-align center
	width 80%
	max-width 520px
	margin auto
	margin-bottom 80px

	&__headings
		margin-bottom 70px
		padding 0 20px

	&__email
		margin-bottom 24px

	&__input
		border 0
		width 100%
		text-align center
		line-height 27px
		font-size 23px
		letter-spacing 5px
		padding 10px
		outline 0
		border-bottom 2px solid $color-gray
		transition all .3s ease-in-out

		&:focus
			border-bottom 2px solid $color-brand

