.hero
	background-image $gradient-warm
	display flex
	height 80vh
	max-height 833px
	min-height 600px
	position relative

	+below($breakpoint-mobile)
		padding 24px 0
		min-height calc(100vh - 120px)

	.container
		align-items center
		display flex
		flex-direction row
		justify-content space-between

		+below($breakpoint-mobile)
			flex-direction column

	&__side
		display inline-block
		width 50%
		padding 12px 0

		+below($breakpoint-mobile)
			width 100%

		&--right
			text-align right

			+below($breakpoint-mobile)
				text-align left

	&__image
		max-width 438px
		width 80%

		+below($breakpoint-mobile)
			width 70%
			max-width 193px

	&__title
		color #fff
		font-size 70px
		font-weight normal
		letter-spacing 8px
		line-height 80px
		margin-bottom 14px
		text-transform uppercase

		+below($breakpoint-mobile)
			font-size 30px
			letter-spacing 3.5px
			line-height 35px

	&__description
		color #fff
		font-size 21px
		letter-spacing .95px
		line-height 35px

		+below($breakpoint-mobile)
			font-size 16px
			letter-spacing .7px
			line-height 35px

	&__cards
		position absolute
		left 0
		right 0
		z-index 1
		bottom -84px
		margin auto
		width $container-width
		max-width 100%
		padding 0 30px
		box-sizing border-box
		display flex
		justify-content space-around

		+below($breakpoint-mobile)
			padding 0 4px
			bottom -52px

	&__card
		width 25%
		height 168px
		box-sizing border-box
		display inline-block
		text-align center
		padding 16px 0
		background-color $color-lightest-gray
		border-radius 5px
		box-shadow 0 86px 20px -70px rgba(181, 181, 181, .37)
		display flex
		flex-direction column
		justify-content space-between
		transition all .3s ease-in-out
		cursor pointer

		+above($breakpoint-mobile)
			&:hover
				margin-top -4px
				box-shadow 0 94px 20px -72px rgba(181, 181, 181, .37)

		+below($breakpoint-mobile)
			width 31%
			height 104px
			padding 12px 0
			box-shadow 0 28px 20px -16px rgba(181, 181, 181, .37)


	&__icon
		+below($breakpoint-mobile)
			height 38px
	&__name
		font-size 17px
		letter-spacing .76px
		text-transform uppercase
		font-weight normal
		color $color-brand
		line-height 20px
		width 60%
		margin 0 auto

		+below($breakpoint-mobile)
			font-size 13px
			line-height 16px
			letter-spacing .6px
			width 90%

