.smart-choices
	font-size 0
	margin 54px 0 143px
	background-color $color-lightest-gray
	padding 20px 0

	+below($breakpoint-mobile)
		margin 48px 0

	&__sided
		display inline-block
		vertical-align top
		width 50%

		+below($breakpoint-mobile)
			width 100%
			text-align center

	&__icons
		text-align center
		font-size 0
		padding-right 14%

		+below($breakpoint-mobile)
			padding-right 0
			margin-bottom 48px

	&__icon
		width 50%
		display inline-block
		vertical-align top

		&:first-of-type
			display block
			margin auto
			margin-bottom 68px

	&__image
		width 99px
		height 99px
		vertical-align middle
		line-height 99px
		background-color #fff
		border-radius 50%
		display block
		box-shadow 0 26px 46px -14px rgba(0, 0, 0, .32)
		margin-bottom 12px
		display inline-block
		transition all .3s ease-in-out

		+above($breakpoint-mobile)
			&:hover
				box-shadow 0 18px 32px -6px rgba(0, 0, 0, .32)


		img
			line-height 99px
			width 66px
			vertical-align middle

	&__label
		font-size 17px
		line-height 20px
		letter-spacing 2px
		color $color-brand
		margin auto

	&__title
		font-size 44px
		color $color-brand
		line-height 52px
		letter-spacing 5.1px
		font-weight normal

		&--gray
			color $color-darkest-gray

		+below($breakpoint-mobile)
			font-size 28px
			line-height 33px

	&__text
		margin-top 40px
		font-size 18px
		line-height 37px
		letter-spacing 2.2px
		color $color-dark-gray

		span
			color $color-brand

	&__paragraph:last-of-type
		margin-top 40px
