.add-modal
	position fixed
	left 0
	right 0
	bottom 0
	z-index 10

	.container
		position relative

	&__button
		position absolute
		bottom 24px
		right 0
		z-index 5
		height 56px
		width 56px
		background-color $color-main
		color #fff
		line-height 56px
		border-radius 50%
		border 0
		font-size 24px
		padding 0
		vertical-align middle
		box-shadow $depth-2
		transition all .3s
		cursor pointer
		outline 0

		+above($breakpoint-mobile)
			&:hover
				box-shadow $depth-4

	&__close
		background-color transparent
		color #fff
		border 0
		outline 0
		font-size 12px
		cursor pointer
		transition all .3s
		padding 6px 12px
		border-radius 2px

		+above($breakpoint-mobile)
			&:hover
				box-shadow $depth-4


	&__modal, &__mask
		position fixed
		left 0
		right 0
		bottom 0
		top 0
		opacity 0
		transform translate(-100%)
		transition opacity .5s ease-in-out, transform 0s .5s ease-in-out

	&__modal
		display flex
		align-items center
		justify-content center
		cursor pointer

	&__mask
		background-color $color-transparent

	&__content
		width 90%
		max-width 500px
		background-color $color-light-transparent
		box-shadow $depth-3
		border-radius 2px

	&__header
		padding 20px 12px
		border-bottom 1px solid rgba(255, 255, 255, .1)
		display flex
		align-items center
		justify-content space-between

	&__title
		font-size 24px
		color #fff
		font-weight normal

	&__form
		padding 20px 12px
		overflow hidden

	&__input
		width 100%
		box-sizing border-box
		line-height 24px
		font-size 16px
		outline 0
		padding 6px
		border 1px solid rgba(255, 255, 255, .2)
		border-radius 2px
		background-color transparent
		color #fff

	&__label
		font-size 16px
		display block
		margin-bottom 8px
		color #fff

	&__info
		font-size 14px
		color #bbb
		display block
		margin-top 8px

	.button
		margin 0
		margin-top 12px
		padding 0 24px
		height 42px
		font-size 14px
		float right
		clear both

	&.is--open .add-modal
		&__modal, &__mask
			opacity 1
			transform translate(0)
			transition opacity .5s , transform 0s
