// Local variables
$timing = .5s

.main-header
	position fixed
	top 0
	left 0
	right 0
	z-index 10
	transition all $timing ease-in-out
	background-color $color-main
	box-shadow $depth-1

	&--inverted
		box-shadow $depth-3

	&--menu .main-header
		&__menu
			transform translateX(0)

		&__mask
			transform translateX(0)
			opacity 1
			transition transform 0s, opacity $timing .1s

	.container
		z-index 10
		transition all $timing ease-in-out
		padding 12px

		+below($breakpoint-mobile)
			z-index 10
			padding 12px 12px 12px 18px
			background-color $color-main
			box-shadow $depth-1
			max-width 100%

	&__logo, &__menu, &__link
		display inline-block
		vertical-align middle
		line-height 45px

	&__menu
		+below($breakpoint-mobile)
			position fixed
			top 60px
			bottom 0
			right 0
			height 100%
			width 210px
			background-color $color-darker-main
			text-align right
			padding 30px
			z-index -1
			box-shadow $depth-3
			transform translateX(100%)
			transition transform  $timing ease-in-out

	&__mask
		+below($breakpoint-mobile)
			position fixed
			top 0
			bottom 0
			left 0
			right 0
			background-color $color-transparent
			z-index -2
			opacity 0
			transform translateX(100%)
			transition transform 0s $timing, opacity $timing .1s


	&__logo
		margin 0 24px 0 0
		height 51px
		width 60px
		font-size 32px
		color #fff
		line-height 51px
		font-weight 400

	&__link
		a
			font-size 17px
			letter-spacing .76px
			font-weight 400
			color #fff
			margin 0 12px
			font-weight normal
			transition all $timing ease-in-out
			vertical-align middle
			line-height 45px

		+below($breakpoint-mobile)
			display block
			line-height 52px

			a
				font-size 22px


	&__button
		display none
		background-image url('../../../assets/icons/menu.svg')

		+below($breakpoint-mobile)
			display block
			height 24px
			width 35px
			border 0
			bottom 0
			top 0
			right 20px
			margin auto
			position absolute
			background-color transparent
			background-position center
			background-repeat no-repeat
			outline 0
			transition background-image $timing

