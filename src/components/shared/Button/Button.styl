.button
	height 48px
	line-height 48px
	min-width 143px
	box-sizing border-box
	padding 0 20px
	border 0
	outline 0
	color #fff
	text-transform uppercase
	letter-spacing 2px
	font-size 17px
	border-radius 24px
	display inline-block
	cursor pointer
	transition all .3s ease-in-out
	text-align center

	+above($breakpoint-mobile)
		&:hover
			opacity .9

	&:active
		opacity 1
		box-shadow inset 0 0 26px 4px rgba(0, 0, 0, .12)
	&--default
		background-image $gradient-warm

	&--lottery
		background-image $gradient-lottery

	&--capitalize
		text-transform capitalize
