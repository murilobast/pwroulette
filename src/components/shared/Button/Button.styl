.button
	color #fff
	border 0
	margin 0 4px
	display inline-block
	padding 0 12px
	font-size 12px
	height 26px
	line-height 26px
	border-radius 3px
	box-shadow $depth-1
	transition all .3s ease-in-out
	cursor pointer
	background-color $color-light-transparent
	outline 0

	&:active
		opacity .7

	+above($breakpoint-mobile)
		&:hover
			box-shadow $depth-2
			background-color $color-transparent
