.card
	display inline-block
	width 100%
	box-shadow 1px 6px 10px 0 rgba(0, 0, 0, .15)
	transition all .3s ease-in-out

	+above($breakpoint-mobile)
		&:hover
			box-shadow 1px 18px 14px -6px rgba(0, 0, 0, .15)


	&__image
		width 100%
		margin-bottom 13px

	&__tag
		text-transform uppercase
		font-size 12px
		line-height 14px
		text-align center
		margin-bottom 13px

	&__title
		font-size 18px
		line-height 28px
		color #000
		padding 0 12px
		margin-bottom 6px

	&__more
		display block
		padding 14px 12px
		border-top 1px solid $color-gray
		font-size 14px
		line-height 17px
		text-transform uppercase
