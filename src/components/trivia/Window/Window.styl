	&__answer
		padding 12px
		background-color $color-transparent
		margin-bottom 6px
		color #fff
		opacity .5
		border-radius 2px
		cursor default

		&.is--highlight
			cursor pointer
			background-color rgba(255, 255, 255, .2)
			opacity 1
			box-shadow $depth-4

	&__title
		font-size 18px
		font-weight normal
		color #fff

