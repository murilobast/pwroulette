.window
	width 100%
	box-sizing border-box
	padding 16px 12px 16px
	border-radius 2px
	background-color $color-transparent
	box-shadow $depth-2
	position relative
	margin 0 auto 30px

	&__content
		background-color $color-light-transparent
		padding 30px 24px 30px
		margin-bottom 12px
		border-radius 2px
		box-shadow $depth-1

	&__options
		background-color $color-light-transparent
		padding 16px 12px 10px
		border-radius 2px
		box-shadow $depth-1
		margin-bottom 16px

	&__name
		font-size 15px
		font-weight normal
