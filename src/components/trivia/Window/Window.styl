.window
	margin-top 80px
	width 100%
	max-width 380px
	box-sizing border-box
	padding 32px 12px 16px
	border-radius 2px
	background-color $color-transparent
	box-shadow $depth-2
	position relative

	&__content
		background-color $color-light-transparent
		padding 16px 12px 30px
		margin-bottom 12px
		border-radius 2px
		box-shadow $depth-1

	&__options
		background-color $color-light-transparent
		padding 16px 12px 10px
		border-radius 2px
		box-shadow $depth-1
		margin-bottom 16px

	&__close
		width 36px
		height 36px
		position absolute
		right 16px
		top 8px

		&:before, &:after
			content ''
			position absolute
			top 0
			right 8px
			width 2px
			height 50%
			background-color #fff

		&:before
			transform rotate(45deg)

		&:after
			transform rotate(-45deg)

	&__answer
		padding 12px 6px
		background-color $color-transparent
		margin-bottom 6px
		font-size 14px
		color #fff
		opacity .5
		border-radius 2px
		cursor default

		&.is--highlight
			cursor pointer
			background-color rgba(255, 255, 255, .2)
			opacity 1
			box-shadow $depth-4

	&__title
		font-size 16px
		font-weight normal
		color #fff

