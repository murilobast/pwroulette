.modal-mask, .modal-window
	opacity 0 
	transition opacity 0.2s ease-in-out
	margin-top -100vh
	&.show
		opacity 1
		margin-top 0
	
.modal-mask
	position fixed
	bottom 0
	left 0
	top 0
	width 100vw 
	height 100vh 
	background-color rgba(0, 0, 0, .5)
.modal-window
	width 320px
	display block 
	position fixed
	top 50px
	right 0
	left 0
	margin auto
	margin-top -100vh
	z-index 10
	color #E2B443
	@media (min-width: 720px)
		top 150px
	&__top
		background-image url('/assets/top.png')
		height 7px
	&__container
		background-image url('/assets/outter.png')
		&__header
			padding 10px 20px
			font-size 18px
		&__content
			label
				color #E2B443
				font-weight normal
				font-size 12px
			input
				width 54px
				outline 0
				background-color transparent
				color #FFF
				border 1px solid rgba(226, 180, 67, .35)
				font-size 12px
				text-align right
				&::-webkit-inner-spin-button
					opacity: 1
					margin-left 4px
			input[type="text"]
				text-align left
				display block
				width 100%
				margin-bottom 10px 
			p
				font-size 12px
				color #FFF 
				background-color rgba(0, 0, 0, .35)
				padding 4px
			&__amount, &__until, &__url
				padding 0 20px
			&__amount, &__url
				margin-bottom 10px
			&__until
				.selected-item
					color #FFF 
			&__inner
				margin 0 auto
				width 300px
				max-height 296px
				overflow-x hidden
				overflow-y auto
				min-height 74px
				background-image url('/assets/inner.png')
				background-repeat no-repeat repeat
				text-align left
				padding 2px 2px 35px 2px
				&__item
					margin 0 3px 5px 2px
					display inline-block
					vertical-align top
					position relative
					cursor default
					cursor pointer
					&.selected
						&:after
							content ''
							position absolute
							top 0
							left 0
							width 32px
							height 32px
							display block
							box-sizing border-box
							border 2px solid rgba(255, 205, 77, .6)
					&__percent
						position absolute
						left 1px
						bottom 2px
						margin auto
						color #fff 
						font-size 12px
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
					img
						height 32px
						width 32px
		&__footer
			overflow hidden
			padding 10px 14px
			&__submit
				float right
	&__bottom
		background-image url('/assets/bottom.png')
		background-repeat no-repeat 
		height 4px