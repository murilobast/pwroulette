@import url('https://fonts.googleapis.com/css?family=Roboto:400,700')

body, html
	background-color #1B1D26
	background-image url('/bg/01.jpg')
	background-repeat no-repeat
	// font-family 'Arial'
	font-family: 'Roboto', sans-serif
	padding 0
	margin 0
	// min-width 720px
	 
p, h3
	margin 0
	padding 0
	
.content
	max-width 960px 
	margin 0 auto
	padding 88px 0 24px
	@media (min-width: 720px)
		padding 24px 0 24px
	
.title
	background rgba(0, 0, 0, .6)  
	display block
	width 260px
	margin auto
	padding 4px
	border-radius 3px
	margin-bottom 10px 
	position relative
	&:before
		content ''
		border-radius 3px
		position absolute
		top 1px
		bottom 1px
		right 1px
		left 1px
		border 1px solid #76644a
	h1
		color #FFF
		font-size 24px
		text-align center
		font-weight normal
		margin 0 
		
footer
	position fixed
	bottom 0
	left 0
	right 0
	height 32px
	width 100%
	color #FFF
	text-align center
	font-size 14px
	background rgba(0, 0, 0, .6)
	margin 0
	a, span
		line-height 32px
	a
		color #e2e2e2
		
.floating
	position relative
	&__text
		font-size 12px 
		position absolute
		top 40px
		left 0
		border-radius 3px
		padding 4px 8px
		color #FFF 
		box-sizing border-box
		background-color rgba(0, 0, 0, .8)
		z-index 5
		display none
		white-space nowrap
		&.show
			display block 
		&:before
			content ''
			border-radius 3px
			position absolute
			top 1px
			bottom 1px
			right 1px
			left 1px
			border 1px solid #76644a

.button
	width 64px
	height 21px   
	border 0  
	border none
	padding 0
	color #FFF 
	overflow hidden
	background-color transparent 
	background-image url('/assets/button/_normal.png')
	background-repeat no-repeat
	outline 0
	cursor pointer
	font-size 12px 
	&:hover
		background-image url('/assets/button/_hover.png')
	&:active
		background-image url('/assets/button/_pressed.png')
	&.disabled
		background-image initial