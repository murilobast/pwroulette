.chests__drops
	background-color rgba(51, 51, 51, .6)
	margin 16px auto 48px
	padding  16px
	width 80%
	box-shadow 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24)
	border-radius 3px
	text-align left
	@media (min-width: 720px)
		text-align center
	font-size 16px
	position relative
	&__info
		position absolute
		right 12px
		top 32px
		background-color rgba(51, 51, 51, 1)
		z-index 5
		box-shadow 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24)
		color #FFF 
		border-radius 2px
		max-width 240px
		text-align left
		font-size 12px
		padding 12px 8px
		margin-top -300px 
		transition opacity .3s ease-in-out, margin-top .01s ease-in-out .3s
		opacity 0
		&__icon
			position absolute
			right 12px
			top 12px
			font-size 16px
			cursor pointer
			color #FFF
			background-color rgba(0, 0, 0, 0)
			border 0
		&__text
			margin-bottom 4px
		&.isOpen
			transition opacity .3s ease-in-out
			margin-top 0
			opacity 1
			
	&__opts, > div
		display inline-block
		input, select
			padding 4px
			border-radius 2px
			color #FFF
			border 1px solid rgba(255, 255, 255, .3)
			background-color rgba(0, 0, 0, 0)
			outline 0
	&__opts__field, > div
		margin-bottom 10px
	&__opts:last-of-type
		margin-right 16px
	&__opts
		&__field
			display inline-block
			margin-right 4px
			label
				color #FFF
				line-height 32px
			input[type="number"]
				width 54px
				text-align right
				&::-webkit-inner-spin-button
					opacity: 1
					margin-left 4px
			select option
				color #333
	&__list
		text-align left
		font-size 0
		&__item
			display inline-block
			vertical-align top
			color #FFF
			width 100%
			margin 1% 0
			padding 2% 1%
			background-color rgba(0, 0, 0, .3)
			box-sizing border-box
			border-radius 2px
			cursor pointer
			transition box-shadow .3s ease-in-out
			&:hover
				box-shadow 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24)
			@media (min-width: 720px)
				width 32%
				padding 1%
				margin .5%
			.chest
				margin 0 3px 0				
			&__info
				display inline-block
				font-size 14px
				width calc(100% - 41px)
				line-height 16px
				p
					text-overflow ellipsis
					overflow hidden
					white-space nowrap
					i
						font-weight bold