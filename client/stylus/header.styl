.header
	&__content
		position fixed
		height 56px
		top 0
		left 0
		right 0
		z-index 10
		background-color #242a2f
		box-shadow 0 1px 3px rgba(0, 0, 0, .12), 0 1px 2px rgba(0, 0, 0, .24)
		margin auto
		line-height 56px
		z-index 10
		&__brand, &__links, &__menu
			display inline-block
			vertical-align middle
			line-height 56px
		&__menu
			height 42px
			width 42px
			margin 8px
			outline 0
			background-image url("/assets/button/menu.svg")
			background-repeat no-repeat
			background-size contain
			border 1px solid rgba(50, 50, 50, .3)
			border-radius 4px
			box-sizing border-box
			background-color rgba(0, 0, 0, 0)
			outline 0
			cursor pointer
		&__brand
			&__title
				margin 0
				color #FFF
				font-weight normal
				font-size 24px
	&__menu
		margin-left -280px
		position fixed
		padding-top 56px 
		left 0
		bottom 0
		top 0
		width 280px
		display block
		// background-color rgba(0, 0, 0, .6)
		background-color #333
		font-size 16px
		box-shadow 1px 0 3px rgba(0, 0, 0, .12), 1px 0 2px rgba(0, 0, 0, .24)
		transition margin .2s ease-in-out
		z-index 5
		&__mask
			position fixed
			bottom 0
			left 0
			top 0
			width 100% 
			margin-left 100%
			background-color rgba(0, 0, 0, .3)
			opacity 0 
			transition opacity .2s ease-in-out, margin .01s ease-in-out .2s
		&.isOpen
			margin-left 0
			#mask
				margin-left 0
				opacity 1
				transition opacity .2s ease-in-out
		&__link
			display block
			line-height 48px
			position relative
			transition all .1s ease-in-out
			&:before
				transition all .2s ease-in-out
				content ''
				position absolute
				left 0
				top 0
				height 100%
				width 4px
				background #FFF
				opacity 0
			&.active
				&:before
					opacity 1
			a
				padding 4px 12px
				color #FFF
				text-decoration none
				display block
					
@media (min-width: 720px)
	.header
		height 78px
		position relative //se flalhar o initial
		position initial 
		&__content
			height 78px
			line-height 78px
			&__menu
				// display none
			&__brand
				line-height 78px
		&__menu
			line-height 78px
			padding-top 78px
			&__link:hover
				background-color rgba(255, 255, 255, .3)
				padding-left 10px 
					