.bagArea
	overflow hidden
	&__chest, &__chat
		width 50% 
		float left
		position relative
	#bag, .bag
		display block
	#bag
		width 334px
		float right
		position relative
		&__container
			background-image url('/assets/chest_window.png')
			height 253px
			&__chests
				position absolute
				top 42px
				left 22px
				right 84px
				&__chest
					float left
					margin 0 3px
					position relative
					cursor pointer
					&.selected
						&:after
							content ''
							position absolute
							top 0
							left 0
							width 32px
							height 32px
							display block
							box-sizing border-box
							border 2px solid rgba(255, 205, 77, .6)
						span
							display block
					span
						position absolute
						display none
						left 1px
						bottom 2px
						margin auto
						color #fff
						font-size 13px 
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
			&__submit
				position absolute
				right 29px
				top 47px
			&__result
				position absolute
				left 14px
				right 0
				top 86px
				&__item
					width 32px
					height 32px
					margin 3px
					float left
					position relative
					cursor default
					span
						position absolute
						left 1px
						bottom 2px
						margin auto
						color #fff
						font-size 13px 
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
	.chat
		font-size 13px
		background-color rgba(0,0,0,0.7)
		width 334px
		height 241px
		box-sizing border-box
		border-radius 4px
		color #bed293
		font-weight bold
		overflow auto
		margin 11px 4px
		padding 4px 8px
		&__msg
			padding 2px 0 
		