.bagArea
	overflow hidden
	font-size 0
	text-align center
	margin-top 16px
	&__chest, &__chat
		width 100% 
		display inline-block
		position relative
		vertical-align top
	#bag, .chat
		display inline-block
	#bag
		width 320px
		position relative
		&__container
			background-image url('/assets/bag.png')
			height 211px
			&__chests
				position absolute
				top 10px
				left 15px
				right 77px
				&__chest
					float left
					margin 0 3px
					position relative
					cursor pointer
					&.selected
						&:after
							content ''
							position absolute
							top 0
							left 0
							width 32px
							height 32px
							display block
							box-sizing border-box
							border 2px solid rgba(255, 205, 77, .6)
						span
							display block
					span
						position absolute
						display none
						left 1px
						bottom 2px
						margin auto
						color #fff
						font-size 13px 
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
			&__submit
				position absolute
				right 13px
				top 16px
			&__result
				position absolute
				left 7px
				right 0
				top 54px
				&__item
					width 32px
					height 32px
					margin 3px
					float left
					position relative
					cursor default
					span
						position absolute
						left 1px
						bottom 2px
						margin auto
						color #fff
						font-size 13px 
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
	.chat
		font-size 13px
		background-color rgba(0,0,0,0.7)
		width 326px
		height 180px
		box-sizing border-box
		border-radius 4px
		color #bed293
		font-weight bold
		overflow auto
		//margin 11px 4px
		margin 0 4px
		padding 4px 8px
		text-align left
		&__msg
			padding 2px 0
			
@media (min-width: 720px)
	.bagArea
		&__chest, &__chat
			width 50%
			text-align right
		&__chat
			text-align left
			padding 2px 0
		.chat
			height 204px