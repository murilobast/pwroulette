.chests
	text-align center
	font-size 0
	.chest
		cursor pointer
		-webkit-user-select none
	&__bag, &__list
		width 320px
		display inline-block
		&__top
			background-image url('/assets/top.png')
			height 7px
		&__container
			background-image url('/assets/outter.png')
			padding-bottom 4px
			&__header
				width 304px
				margin auto
				height 48px
				padding 0 3px
				line-height 48px
				text-align left
				&__icon
					width 32px
					height 32px
					background-color #E2B443 
					display inline-block
					vertical-align top
					margin 8px 8px 8px 0
					img
						vertical-align top
				&__name
					color #E2B443
					display inline-block
					vertical-align top
					max-width 230px
					h3
						white-space nowrap 
						text-overflow ellipsis
						overflow hidden
						vertical-align top
						font-size 14px
						line-height 48px
				&__amount
					color #E2B443
					font-size 14px
					padding-left 4px
			&__inner
				margin 0 auto
				width 300px 
				// min-height 148px
				min-height 74px
				background-image url('/assets/inner.png')
				background-repeat no-repeat repeat
				text-align left
				padding 2px 2px 35px 2px
				&__item
					margin 0 3px 5px 2px
					display inline-block
					vertical-align top
					position relative
					cursor default
					span
						position absolute
						left 1px
						bottom 2px
						margin auto
						color #fff
						font-size 13px 
						padding 1px
						border-radius 3px
						background-color rgba(51,51,51,0.8)
			&__form
				font-size 14px
				text-align left
				width 294px 
				margin auto
				&__amount
					display inline-block
					padding 8px 0 4px
					label
						color #E2B443
						font-weight normal
						font-size 12px
					input
						width 54px
						outline 0
						background-color transparent
						color #FFF
						border 1px solid rgba(226, 180, 67, .35)
						font-size 12px
						text-align right
				&__open
					line-height 21px
					float right
					margin 9px 0
		&__bottom
			background-image url('/assets/bottom.png')
			background-repeat no-repeat 
			height 4px
			
	&__list
		&__container
			&__header
				height 32px
				&__name h3
					line-height 32px
			&__inner
				min-height 74px
				
	@media (min-width: 720px)
		width 50%
		display inline-block
		vertical-align top